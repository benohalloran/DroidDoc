<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@android:style/Holo.ButtonBar.AlertDialog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Declared in "
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$decleared class "
        android:id="@+id/declared_in"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="METHOD"
        android:id="@+id/method_string"
        android:layout_below="@+id/declared_in"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="COMMENTS"
        android:id="@+id/scrollview"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/method_string"
        android:layout_alignLeft="@+id/method_string"
        android:layout_alignStart="@+id/method_string">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="COMMENTS"
            android:id="@+id/comments" />
    </ScrollView>

</RelativeLayout>